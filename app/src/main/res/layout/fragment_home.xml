<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ui.home.HomeFragment">

  <androidx.recyclerview.widget.RecyclerView
      android:layout_width="match_parent"
      android:id="@+id/recycler"
      android:layout_marginHorizontal="@dimen/size_21"
      android:layout_height="match_parent"/>

    <ProgressBar
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerInParent="true"
        android:id="@+id/progress"/>

  <LinearLayout
      android:layout_width="wrap_content"
      android:id="@+id/lin_fab2"
      android:visibility="gone"
      android:layout_margin="16dp"
      android:layout_alignParentRight="true"
      android:layout_alignParentBottom="true"
      android:layout_height="wrap_content">

  <TextView
      android:layout_width="wrap_content"
      android:textColor="@color/black"
      android:layout_gravity="center"
      android:layout_marginRight="5dp"
      android:id="@+id/tv_upload"
      android:layout_height="wrap_content"/>

  <ImageView
      android:layout_width="45dp"
      android:layout_height="45dp"
      android:id="@+id/fab2"
      android:padding="@dimen/size_13"
      android:src="@drawable/ic_photo_white_24dp"
      android:background="@drawable/circle_fab"
      android:layout_alignParentRight="true"
      android:layout_alignParentBottom="true" />
  </LinearLayout>

  <LinearLayout
      android:layout_width="wrap_content"
      android:id="@+id/lin_fab1"
      android:visibility="gone"
      android:layout_margin="16dp"
      android:layout_alignParentRight="true"
      android:layout_alignParentBottom="true"
      android:layout_height="wrap_content">

    <TextView
        android:layout_width="wrap_content"
        android:textColor="@color/black"
        android:layout_gravity="center"
        android:id="@+id/tv_camera_360"
        android:layout_height="wrap_content"/>

    <ImageView
        android:layout_width="45dp"
        android:layout_height="45dp"
        android:padding="@dimen/size_13"
        android:src="@drawable/ic_photo_white_24dp"
        android:background="@drawable/circle_fab"
        android:layout_alignParentRight="true"
        android:layout_alignParentBottom="true" />

  </LinearLayout>



  <com.google.android.material.floatingactionbutton.FloatingActionButton
      android:layout_width="wrap_content"
      android:layout_height="wrap_content"
      android:id="@+id/fab"
      android:layout_marginRight="21dp"
      android:layout_marginBottom="@dimen/size_21"
      android:layout_alignParentRight="true"
      android:layout_alignParentBottom="true"
      app:srcCompat="@drawable/ic_add_white_24dp" />
</RelativeLayout>